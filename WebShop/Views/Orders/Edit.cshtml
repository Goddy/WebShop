@using WebShop.App_GlobalResources
@model WebShop.Models.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Locale.Edit</h2>


@using (Html.BeginForm("Save", "Orders", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Locale.Status</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div style="margin-bottom: 30px;">
            @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
        
        @Html.Partial("_DetailPartial")

        <div style="margin-bottom: 30px;margin-top: 20px;">
            <input type="submit" value="@Locale.Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Overview")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
