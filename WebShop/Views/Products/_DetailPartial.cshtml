@model WebShop.Models.Product
           
<h2>@Html.DisplayFor(modelItem => Model.Category) - @Html.DisplayFor(modelItem => Model.Name)</h2>

<div class="row">
    <div class="col-md-4">
        <img class="group list-group-image" src="@((Model.Image != null)? @Url.Content(Model.Image.Location): @Url.Content("~/Images/Custom/placeholder.png"))" onerror="this.onerror = null; this.src = 'http://placehold.it/400x250/000/fff';" alt="@Model.Name" />
    </div>
    <div class="col-md-7">
        <h3>€@Html.DisplayFor(modelItem => Model.Price)</h3>
        <p>@Html.DisplayFor(modelItem => Model.Description)</p>
    </div>
</div>

