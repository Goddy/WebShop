@using WebShop.App_GlobalResources
@model IEnumerable<WebShop.Models.Product>
@* 
    Partial view for  product search results, returns nothing if no results are found.
*@
@if (Model.Any())
{
    <div id="products" class="row list-group">
        @foreach (var item in Model)
        {
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt=""/>
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">
                            @Html.DisplayFor(modelItem => item.Name)
                        </h4>
                        <p class="group inner list-group-item-text">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead">
                                    €@Html.DisplayFor(modelItem => item.Price)
                                </p>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <a class="btn add-to-cart btn-success" href="@item.Id">@Locale.Add_to_cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


